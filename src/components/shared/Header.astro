---
import Logo from "./Logo.astro";
import type { Link } from "../../../types/index";

const links: Link[] = [
  { name: "Bio", href: "/bio" },
  { name: "Collections", href: "/collections" },
  { name: "Press", href: "/press" },
  { name: "Contact", href: "/contact" },
];
---

<div class="flex justify-between bg-slate-800 text-white p-4 sticky top-0">
  <Logo />
  <nav class="flex gap-2 justify-center items-center">
    {
      links.map((link) => (
        <a
          href={link.href}
          class="hover:text-slate-400 transition-colors duration-200 ease-in-out  font-inter"
        >
          {" "}
          {link.name}
        </a>
      ))
    }
  </nav>
</div>
