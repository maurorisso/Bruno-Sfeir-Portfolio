---
import Layout from "../../layouts/Layout.astro";
import PaintingItem from "./PaintingItem.astro";
import PaintingsList from "./PaintingItem.astro";
import { type Painting } from "../../../types/index";

type Props = {
  title: string;
  paintingsList: Painting[];
  description: string;
};

const { title, paintingsList, description } = Astro.props;
---

<Layout title={title}>
  <div class="py-8">
    <div class="flex flex-col items-center">
      <h1 class="text-3xl font-semibold">{title}</h1>
      <p class="md:text-lg text-center p-2">{description}</p>
    </div>

    <div
      class="grid-cols-1 items-center grid md:grid-cols-2 lg:grid-cols-3 gap-10 mx-auto wrapper"
    >
      {paintingsList.map((painting) => <PaintingItem item={painting} />)}
    </div>
  </div>
</Layout>
