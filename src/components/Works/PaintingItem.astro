---
import Image from "astro/components/Image.astro";
import { type Painting } from "../../../types/index";

type Props = {
  item: Painting;
};

const { item } = Astro.props;
---

<div class="group info-wrapper relative">
  <Image
    src={item.imageUrl}
    alt={item.name}
    loading="lazy"
    class="h-auto max-w-full"
  />

  <div
    class="info absolute bottom-0 left-0 right-0 group-hover:flex flex-col justify-end p-2 bg-black bg-opacity-60
    ease-out duration-300 transition-all opacity-0 group-hover:opacity-100"
  >
    <div class="text-white text-lg">{item.name}</div>
    <div class="flex justify-between w-full mt-1">
      <div class="text-white">{item.year}</div>
      <div class="text-white">
        {item.size}
      </div>
    </div>
  </div>
</div>
