---
import React from "react";
import CollectionsList from "../../data/collections";
import Image from "astro/components/Image.astro";
---

<div id="collections">
  <h2 class="text-center text-3xl font-semibold mb-4">Collections</h2>

  <div class="flex flex-wrap justify-center gap-4 w-3/4 items-center mx-auto">
    {
      CollectionsList.map((collection) => (
        <div class="flex flex-col items-center">
          <a href={collection.url} rel="noopener noreferrer">
            <Image
              src={collection.thumbnail}
              alt={collection.name}
              class="w-56 h-56 rounded "
            />
          </a>
          <p class="mt-1">{collection.name}</p>
        </div>
      ))
    }
  </div>
</div>
